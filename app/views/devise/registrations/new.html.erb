<div class="row" >
  <div class="col-md-7 col-sm-offset-2 col-sm-8 col-sm-offset-1 col-xs-12 " style= "text-align:left" >

  <div id="signup">
    Already a member? <p>
    <%= render "devise/shared/links" %>
  </div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.hidden_field :latitude, :value => (request.location ? request.location.latitude : 38.957) %>
  <%= f.hidden_field :longitude, :value => (request.location ? request.location.longitude : -77.120)%>

  <p>Username - numbers and letters ONLY (Will be used in your unique URL.)<br />
  <%= f.text_field :permalink, :autofocus => true %>  <p> 
  Full name<br />
  <%= f.text_field :name, :autofocus => true %>  <p>
  Email<br />
  <%= f.email_field :email, :autofocus => true %>  <p>

  Which kind of account do you wish to use? (This can be changed later.)
  <br><%= radio_button_tag(:author, 1) %>
  <%= label_tag(:author_child, "Reader ") %>
  <br><%= radio_button_tag(:author, 2) %>
  <%= label_tag(:author_adult, "Author ") %>

  <p>  Password <br />
  <%= f.password_field :password %><br>
  Enter password again <br />
  <%= f.password_field :password_confirmation %><p>
  I agree to the CrowdPublishTV
  <%= link_to("Terms of Service", tos_path, :target => "_blank" ) %>
  <br><br/>  <%= f.submit "Sign up" %>

<% end %>

</div>
</div>
