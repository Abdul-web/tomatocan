<div class="container">
  <%= render 'layouts/flash_messages' %>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-1">
      <h1>Sign Up</h1>
      <p>Already a member? <%= link_to 'Sign in', "/login" %>!</p>
      <div class="well">
        <%= form_for(resource, :as => resource_name, :url => user_registration_path) do |f| %>
          <div class="form-group">
            <h2><%= f.label :name, "Name" %></h2>
            <p class="help-block">Enter your name or the name of your organization.</p>
            <%= f.text_field :name, :autofocus => true, :class => "form-control" %>
          </div>
          <div class="form-group">
            <h2><%= f.label :email %></h2>
            <%= f.email_field :email, :class => "form-control" %>
          </div>
          <div class="form-group">
            <h2><%=f.label :name, "Username" %></h2>
            <p class="help-block">Alphanumeric characters only. Less than 20 characters.</p>
            <div class="input-group">
              <div class="input-group-addon">ThinQ.tv/</div>
              <%= f.text_field :permalink, placeholder: "username", maxlength: 20, :class => "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <h2><%= f.label :password %></h2>
            <p class="help-block">Enter password (Minimum 8 characters)</p>
            <%= f.password_field :password, :class => "form-control" %>
            <p class="help-block">Confirm password</p>
            <%= f.password_field :password_confirmation, :class => "form-control" %>
          </div>
          <small>By clicking 'Sign Up,' you agree to the ThinQ.tv <%= link_to("Terms of Service", tos_path, :target => "_blank") %>.</small><br><br>
          <%= f.submit "Sign Up", :class => "form-control btn-primary" %>
        <% end %>

        <!-- app/views/pages/home.html.erb -->

        <% unless current_user %>
          <a href="/users/auth/facebook" 
            style="display: inline-block; margin-top: 8px; margin-bottom: 10px; border: 1px solid transparent; border-radius: 3px; padding: 8px; font-size: 15px; text-decoration: none; background-color: #4267B2; color: #fff;">
            <img src="https://cdn.usbrandcolors.com/images/logos/facebook-logo.svg"
              style="width:50px; height:50px; align:center"
            >
            Sign in with facebook 
           </a>
        <% else %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete %>
        <% end %>
        
      </div>
    </div>
    
  </div>
</div>
