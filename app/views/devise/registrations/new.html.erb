<div class="container">
  <%= render 'layouts/flash_messages' %>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-1">
      <h1>Sign Up</h1>
      <p>Already a member? <%= link_to 'Sign in', "/login" %>!</p>
      <div class="well">
        <%= form_for(resource, :as => resource_name, :url => user_registration_path) do |f| %>
          <div class="form-group">
            <h2><%= f.label :name, "Name" %></h2>
            <p class="help-block">Enter your name or the name of your organization.</p>
            <%= f.text_field :name, :autofocus => true, :class => "form-control" %>
          </div>
          <div class="form-group">
            <h2><%= f.label :email %></h2>
            <%= f.email_field :email, :class => "form-control" %>
          </div>
          <div class="form-group">
            <h2><%=f.label :name, "Username" %></h2>
            <p class="help-block">Alphanumeric characters only. Less than 20 characters.</p>
            <div class="input-group">
              <div class="input-group-addon">ThinQ.tv/</div>
              <%= f.text_field :permalink, placeholder: "username", maxlength: 20, :class => "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <h2><%= f.label :password %></h2>
            <p class="help-block">Enter password (Minimum 8 characters)</p>
            <%= f.password_field :password, :class => "form-control" %>
            <p class="help-block">Confirm password</p>
            <%= f.password_field :password_confirmation, :class => "form-control" %>
          </div>
          <small>By clicking 'Sign Up,' you agree to the ThinQ.tv <%= link_to("Terms of Service", tos_path, :target => "_blank") %>.</small><br><br>
          <%= f.submit "Sign Up", :class => "form-control btn-primary" %>
        <% end %>
      </div>
    </div>
    <br><br><br><br><br>
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '{your-app-id}',
          cookie     : true,
          xfbml      : true,
          version    : '{api-version}'
        });
        FB.AppEvents.logPageView();      
      };
      (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>
    <div class="col-lg-5" style="background-color: #F2EBE4">
      Login box here
      <script>
        <fb:login-button
          scope="public_profile,email"
          onlogin="checkLoginState();">
        </fb:login-button>
        function checkLoginState() {
          FB.getLoginStatus(function(response) {
            statusChangeCallback(response);
          });
        }
      </script>
    </div> 
  </div>
</div>
