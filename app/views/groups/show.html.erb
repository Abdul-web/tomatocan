<div style="background-color:transparent;text-align:left;margin-left:auto;margin-right:auto;position:relative;width:850px;">

  <%= render 'form' %>

<div id="calendar" style="position:absolute; left:0px; top:310px; width:900px; height:757px;" align:"left">

<p id="notice"><%= notice %></p>

<p>
  <strong><%= @group.name %></strong>
</p>

<p>
  <strong>Usual meeting place:</strong>
  <%= @group.address %>
</p>

<p>
  <strong>Group Host:</strong>
  <%= @group.user_id %>
</p>

<p>
  <strong>About:</strong>
  <%= @group.about %>
</p>

<p>
  <strong>Type:</strong>
  <%= @group.type %>
</p>

  <% if @group.user_id == current_user.id %>
    <%= link_to 'Edit', edit_group_path(@group) %> |
  <% end %>
</div>
</div>