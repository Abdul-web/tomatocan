<title> CrowdPublish.TV - <%= @user.name %>'s site</title>
<% @descname = @user.name.gsub(/ +/, '-')
if @user.genre1 ; @genreone = @user.genre1.gsub(/ +/, '-') else @genreone = "_"  end
if @user.genre2 ; @genretwo = "," + @user.genre2.gsub(/ +/, '-') else @genretwo = "_" end
if @user.genre3 ; @genrethree = "," + @user.genre3.gsub(/ +/, '-') else @genrethree = "_" end %>


<div class="row">
    <div id="profileBanner">
    <% if @user.bannerpic.present? && @user.bannerpic != '' %>
        <%= image_tag @user.bannerpic.url.to_s, height: "300" %>
    <% else %>
        <%= image_tag "crowddark.png", height: "300" %>
    <% end %>
    </div>
</div>
<div class="row">
    <div class="col-xs-11 col-xs-offset-1" id="profileHeader">
    <% if @user.profilepic.present? && @user.profilepic != '' %>
        <%= image_tag @user.profilepic.url.to_s, :class => "img-circle", :id => "profileImage" %>
        <div id="profileTitle">
            <h1 id="profileName"><%= @user.name %></h1>
            <span id="profileDescription"> <%= @user.genre1 %>, <%= @user.genre2 %>, <%= @user.genre3 %></span>
        </div>

    <% else # no buttons no pic %>
        <div class="col-xl-12 col-md-12 col-xs-12 username">
            <div style="text-shadow: 2px 2px #fff; background: rgba(265, 265, 265, .35); margin-top:110px">
                <%= @user.name %>
            </div>
        </div>
    <% end %>
    </div>
</div>
<% if user_signed_in? %>
<% if current_user.id == @user.id %>
<% if !current_user.stripeid.present? %>
<div class="row">
    <div class="col-md-12">
        <br><br>
        <% if Rails.env.development? || Rails.env.test? %>
        <div class="alert alert-danger clearfix">
            <span class="clearfix">
                <span id="stripeAlertText">You must <strong><a href="https://connect.stripe.com/oauth/authorize?response_type=code&client_id=<%= STRIPE_CONNECT_CLIENT_ID %>&scope=read_write" target="_blank">connect to Stripe</a></strong> to receive payments!</span>
                <span class="pull-right">
                    <a href="https://connect.stripe.com/oauth/authorize?response_type=code&client_id=<%= STRIPE_CONNECT_CLIENT_ID %>&scope=read_write" target="_blank"><%= image_tag("stripebutton.png")%></a>
                </span>
            </span>
        </div>
        <% else %>
        <div class="alert alert-danger clearfix">
            <span class="clearfix">
                <span id="stripeAlertText">You must <strong><a href="https://connect.stripe.com/oauth/authorize?response_type=code&client_id=<%= ENV['STRIPE_CONNECT_CLIENT_ID'] %>&scope=read_write" target="_blank">connect to Stripe</a></strong> to receive payments!</span>
                <span class="pull-right">
                    <a href="https://connect.stripe.com/oauth/authorize?response_type=code&client_id=<%= ENV['STRIPE_CONNECT_CLIENT_ID'] %>&scope=read_write" target="_blank"><%= image_tag("stripebutton.png")%></a>
                </span>
            </span>
        </div>
        <% end %>
    </div>
</div>
<% end %>
<% end %>
<% end %>


    
<!--Not sure what this is-->
<% content_for :forusers do %>
    <meta name="description" content="<%= "Read_about_author_" + @descname + "'s_books:" + @genreone + @genretwo + @genrethree %>">
<% end %>
