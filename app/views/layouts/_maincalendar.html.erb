<div class="helps">
    <script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.1';
        fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <h2>Upcoming Livestream Discussions</h2>
    
    <h3><%= link_to 'Host a livestream discussion', new_event_path, :id => 'tableHost' %></h3>

    <% if @events.count != 0 %>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="width:20%">Topic</th>
                    <th style="width:19%">When (PDT)</th>
                    <th style="width:17%">When (EDT)</th>
                    <!--Deprecate the edit or start options from the homepage-->
                    <th style="width:20%">Host</th>
                    <th style="width:9%"></th>
                    <th style="width:10%">Share</th>
                </tr>
            </thead>
            <tbody>
            <% @events.sort_by{|t| t.start_at}.each do |event| %>
            <% edt = event.start_at + 3.hours %> 
                <tr>
                    <td><%= link_to event.name, event, :title => event.desc, 'data-toggle' => "tooltip", 'data-placement' => "left" %></td>
                    <td><%= event.start_at.strftime("%A %B %d, %I:%M %p")  %></td>
                    <td><%= edt.strftime("%I:%M %p")  %></td>
                    <td>
                        <% user = User.find(event.usrid) %>
                        <%= link_to user.name, "https://crowdpublishtv.herokuapp.com/" + user.permalink, :target => "_blank" %>
                    </td>
                    <td>
                        <% if user_signed_in? %>
                            <% if event.usrid == current_user.id %>
                                <%= link_to '(Edit)', edit_event_path(event.id), :id => 'editEvent' %> 
                            <% end %>
                        <% end %>
                    </td>
                    <td>
                        <% facebookurl = "https://crowdpublishtv.herokuapp.com/" + user.permalink %>
                        <span class="fb-share-button" data-href= <%= facebookurl %> data-layout="button" data-size="small" data-mobile-iframe="true"><a target="_blank" href=<%= facebookurl %> class="fb-xfbml-parse-ignore">Share</a></span>
                        <span><a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-text= "Watch <%= user.name %>'s livestream on <%=  event.name + "," %> starting <%= event.start_at.strftime("%B %d, %I:%M %p")%> PDT (<%= edt.strftime("%I:%M %p") %> EDT): <%= facebookurl %>" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script></span>
                    </td>  
                </tr>
            </tbody>
            <% end %>
        </table>
    </div>
    <% end %>  
</div>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>

