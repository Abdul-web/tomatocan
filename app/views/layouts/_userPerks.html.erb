<div class="row">
	<div class="col-xs-12">
		<h1>Edit Perks</h1>
	</div>
</div>

<div class="row">
	<div class="col-xs-6">
		<div class="panel panel-primary">
			<div class="panel-heading">
				Current Perks
			</div>
			<div class="panel-body">
				<% if @sidebarmerchandise.present? %>
					<% @sidebarmerchandise.each do |merch| %>
					<div class="media"><!--NUMBER OF PERKS AS A BADGE-->
						<div class="pull-left">
							<%= image_tag merch.itempic.url.to_s, class: "media-object", id: "perkImage" %>
						</div>
						<div class="media-body">
							<h4 class="media-heading">
								<%= link_to(merch.name, merchandise_path(merch.id, :groupid => params[:groupid]) ) %>
							</h4>
							
							<!--pops a modal which contains edit page-->
							<%= button_to "Edit Perk", edit_merchandise_path(merch.id), method: :get, class: 'btn btn-primary pull-right' %>

							<% if merch.desc.present? %>
								<%= merch.desc %>
							<% end %>
						</div>
					</div>
					<% end %>
				<% else %>
					<span>No perks:(</span>
				<% end %>
			</div>
		</div>
	</div>

	<div class="col-xs-6">
		<div class="panel panel-primary">
			<div class="panel-heading">
				Create Perk
			</div>
			<div class="panel-body">
			</div>
		</div>
	</div>

</div>