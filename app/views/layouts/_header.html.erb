            </ul>
          </div> 
        <% else %>
          <div class="col-md-4 col-sm-6 col-xs-12 lavenderlink">
            <%= link_to "Get $ & buzz for your ", "/signup" %><br>
            <%= link_to "Writing or movie projects", "/signup" %>
          </div>   

          <div class="col-md-4 col-sm-6 col-xs-12 lavenderlink">
            <%= link_to image_tag("signup.png", title: "Sign Me Up!"), "/signup"%> <br>
            <%= link_to 'Sign in', "/login", {:style=>'color:#ddd; font-size:14px'}  %><br><br>
          </div>

          <div class="col-md-4 col-sm-6 col-xs-12 lavenderlink" style="text-shadow:1px1px#000; width:350px">
            <%= link_to "Get sneak preview access to books & movies!", "/signup", title: "Sign Me Up!" %>
          </div>
        <% end %>

  </div>
