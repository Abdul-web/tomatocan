<header class="navbar navbar-custom headerimage ">
  <div class="container">

        <div class="whitetitle", style="position:relative; z-index: 9999;">
          CrowdFunding, CrowdSelling, CrowdEngagement
        </div>
        <div class="whitesub" style="text-shadow: 1px 1px #000;">
          <% if user_signed_in? %>
            <%= link_to "Sneak preview access to books & movies", phases_path %>
          <% end %>
        </div>


        <% if user_signed_in? %>
          <div class="navbar-inner clearfix usermenu">
            <ul class="nav navbar-nav pull-left">
              <li><%= link_to ".", "/" %>
              <li><%= link_to "Home", "/" %>
              <li><%= link_to "Projects", phases_path %>
              <li><%= link_to "Organizations", groups_path %>
              <li><%= link_to "Authors & Filmmakers", users_path %>
              <li><%= link_to current_user.name, user_profile_path(current_user.permalink) %>
