
<header>
	<nav class="navbar navbar-default">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#globalNavbar">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			
				<% if request.host == "crowdpublishtv.herokuapp.com" %>
					<%= link_to image_tag("starIcon.png", :class => "navbar-brand", :title => "CrowdPublishTV"), 'https://www.crowdpublish.tv' %>
				<% else %> 
					<%= link_to image_tag("starIcon.png", :class => "navbar-brand", :title => "CrowdPublishTV"), '/' %>
				<% end %>
		</div>
		
		<div class="collapse navbar-collapse" id="globalNavbar">
			<ul class="nav navbar-nav">
				<% if request.host == "crowdpublishtv.herokuapp.com" %>
					<li><%= link_to "Home", 'https://www.crowdpublish.tv/home', :title => "Home" %></li>
					<li><%= link_to "About", 'https://www.crowdpublish.tv/aboutus', :title => "About CrowdPublishTV" %></li>
					<li><%= link_to "Discover Talk Show Hosts", 'https://www.crowdpublish.tv/supportourwork', :title => "Browse Hosts"%></li>
					<li><%= link_to "FAQ", 'https://www.crowdpublish.tv/faq', :title => "Frequently Asked Questions" %></li>
				<% else %> 
					<li><%= link_to "Home", '/', :title => "Home" %></li>
					<li><%= link_to "About", '/aboutus', :title => "About CrowdPublishTV" %></li>
					<li><%= link_to "Discover Talk Show Hosts", '/supportourwork', :title => "Browse Hosts" %></li>
					<li><%= link_to "FAQ", '/faq', :title => "Frequently Asked Questions" %></li>
				<% end %>
			</ul>

			<ul class="nav navbar-nav navbar-right">
				<% if user_signed_in? %>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
						<ul class="dropdown-menu">
							<li><%= link_to "View Profile", user_profile_url(current_user.permalink), method: :get %></li>
							<li><%= link_to "Control Panel", user_controlpanel_url(current_user.permalink), method: :get %></li>
						</ul>
					</li>
					<li>
						<p class="navbar-btn">
							<%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => "btn btn-default" %>
						</p>
					</li>
				<% else %>
					<li>
						<p class="navbar-btn">
							<% if request.host == "crowdpublishtv.herokuapp.com" %>
								<%= link_to "Sign Up", 'https://www.crowdpublish.tv/signup', class: "btn btn-primary", :title => "Sign Up for CrowdPublishTV" %>
								<%= link_to 'Sign In', 'https://www.crowdpublish.tv/login', class: "btn btn-default", :title => "Sign Into CrowdPublishTV" %>
							<% else %> 
								<%= link_to "Sign Up", '/signup', class: "btn btn-primary", :title => "Sign Up for CrowdPublishTV" %>
								<%= link_to 'Sign In', '/login', class: "btn btn-default", :title => "Sign Into CrowdPublishTV" %>
							<% end %>
						</p>
					</li>
				<% end %>
			</ul>
		</div>
	</nav>