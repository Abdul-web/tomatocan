<div id="wrapper">
  <div id="sidebar-wrapper">
  <ul class="sidebar-nav">

  <div class="container col-lg-12 " >

<div class="author-books" style = "width: 320px; overflow: wrap;">
  <% if !user_signed_in? %>
    <%= link_to image_tag("signup.png", title: "Sign Me Up!"), "/signup"%>to access Patron Perks <br>
    or <%= link_to 'Sign in...', "/login", {:style=>'float:right'} %><br> 
  <% end %>
  <% if @phase.merchandises.any? %>
    <h2>Become a Patron of <%= @phase.name %> </h2>

    <% if params[:groupid].present? %>
      <% groupsupported = Group.find(params[:groupid]) %>
      5% of purchase will go to <%= groupsupported.name %><br>
    <% end %>
    <% @merchandise.each do |merch| %>
      <% if merch.itempic.present? && merch.itempic != '' %>
        <% itemthumb = merch.itempic %>
      <% else %>
        <% itemthumb = "whiteBk.jpg" %>
      <% end %>

      <table ><tr><td style = "width: 250px;"><%= link_to (image_tag itemthumb, :style => "max-height:150px"), merchandise_path(merch.id) %></td>
      <% if user_signed_in? %>
          <td><%= link_to image_tag("buynow.png" ), new_purchase_path( :merchandise_id => merch.id, :group_id => params[:groupid]), method: :get %> </td>
          </tr>
        <% end %>
      <br>

      <table style = "width: 330px;"><tr><td><%= link_to(merch.name, merchandise_path(merch.id, :groupid => params[:groupid]) ) %></td> 
        <% if user_signed_in? %>
          <td style='float:right'>$<%= sprintf('%.2f', merch.price) %> USD</td> 
        <% end %>
        </tr>
      </table>
      <%= truncate(merch.desc , :length => 200, :separator => ' ') %><br><br>
    <% end %> 
  <% else %>
    <br><%= @phase.name %> is not offering any Perks yet 
  <% end %>
    <br><br>
</div>
</div>
</ul>
</div>
</div>

