<!DOCTYPE html>
<html>
<head>
  <title>Crowdpublishtv</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "https://js.stripe.com/v1/", "application" %>
  <%= csrf_meta_tags %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <%= tag :meta, :name => "aws-key", :content => AWS_KEY %>
  <%= tag :meta, :name => "aws-secret-key", :content => AWS_SECRET_KEY %>
  <%= tag :meta, :name => "devise-secret-key", :content => DEVISE_SECRET_KEY %>
  
  <% if content_for? :forusers %>
    <%= yield :forusers %>
  <% end %>

</head>
<body>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
