<% @title="CrowdPublish.TV - Post an event" %>
<div style="background-color:transparent;text-align:left;margin-left:auto;margin-right:auto;position:relative;width:850px;">

<%= render 'form' %>

<div id="calendar" style="position:absolute; left:0px; top:310px; width:900px; height:757px;" align:"left">

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    Event title......
    <%= f.text_field :name, :size => 60 %><p>
  </div>

  <div class="field">
    Start time...
    <%= f.datetime_select :start_at, :ampm => true, :default => 10.days.from_now, :minute_step => 15 %>
    <% #= date_field(:event, :start_at) %>
  </div>
  <div class="field">
    End time.....
    <%= f.datetime_select :end_at, :ampm => true, :default => 10.days.from_now, :minute_step => 15 %>
  </div>
  <div class="field">
    Description of event<br />
    <%= f.text_area :desc, :cols => 62, :rows => 5 %><p>
  </div>
  <div class="field">
    If an in-person event, street address where this event will take place, otherwise enter "online" <br />
    <%= f.text_field :address, :size => 80 %><p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>
</div>