<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
            <%= value %>
      </div>
<% end %>

<div id="event-page-layout" style="margin-left: 20px; padding-left: 10px;">
<meta property="og:description" content="Host Livestream Discussions" />
<% @title="CrowdPublish TV" %>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.1';
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<div class="row" >
  <div class="col-md-7 col-sm-offset-1 col-sm-8 col-xs-8 ">
    <p id="notice"><%= notice %></p>

    <%= form_for(@rsvp) do |f| %>
      <% if @rsvp.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@rsvp.errors.count, "error") %> prohibited this rsvp from being saved:</h2>
          <ul>
          <% @rsvp.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.hidden_field :event_id, :value => @event.id %>
      <% if user_signed_in? %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
      <% else %>
        Please sign in or enter email to RSVP for this event:
        <%= f.text_field :email, placeholder: "Enter email" %>
      <% end %>
      <%= f.submit "RSVP for this Livestream" %>
    <% end %><br>

<div class="row">
	<div class=".col-12 .col-md-8" style="margin-left: -5px" >
		<u><h1><%= @event.name %></h1></u>
		<% if @rsvps.count > 1 %>
        <div class= ".col-6 .col-md-4 rsvp-users">
            <b>Discussion RSVPs:</b>
          <% @rsvpusers.each do |rsvpuser| %>
            <%= link_to rsvpuser.name, rsvpuser %>
            <% nguests = Rsvpq.where("user_id = ? AND event_id = ?", rsvpuser.id, @event.id) %>
          <% end %>
    <% end %>
	</div>

	<% if user_signed_in? %>
	      <% if @event.usrid == current_user.id %>
		      <%= link_to "Edit", edit_event_path(@event) %> |
		      <%= link_to "Delete Event", @event, :confirm => 'Are you sure?', :method => :delete %> |
	      <% end %>
	<% end %>
<p style="color:#808080">
 <b>Hosted by
  <%= link_to @user.name, user_profile_path(@user.permalink) %> </b>
 </p>
<br>
<p>
  <% edt = @event.start_at + 3.hours %>
  <b>Start time:</b>
  <div style="margin-left:30px">
  <%= @event.start_at.strftime("%A, %B %d, %Y") %>
  <br> 
  <i><%= @event.start_at.strftime("%I:%M %p")%> PDT</i>
    <br>
  <i><%= edt.strftime("%I:%M %p") %> EST</i>
</p>
  </div>
<p>
  <% duration = (@event.end_at - @event.start_at)/60 %>
  <b>Duration:</b><div style="margin-left:30px"><%= duration.floor %> minutes</div>
</p>
<p>
  <b>More details:</b>  
  <div >
  <% if @event.desc.present? %>
    <%= simple_format @event.desc.gsub(/\n/, '<br>') %>
  <% else %>
	<br>No additional details		  
<% end %>
</p>
<%= link_to "Join Live Show", "https://crowdpublishtv.herokuapp.com/" + @user.permalink, :class => 'btn btn-lg btn-warning' %>
<hr>
<p>
  <div style= "text-align:left" >
    <% if @rsvps.count > 5 %>
      <b><%= @rsvps.count %> guests said they'll be there</b><br>
    <% end %>
      <br>
      Invite friends and colleagues to sign up & RSVP for this event!
      <div class="event-name">
          <%= @event.name %>
      </div>

      <% surl = "http://www.crowdpublish.tv/" + @user.permalink %>
      <button id="shareBtn" class="showButton">share</button>
		
      <div id="pp" class="pop">
	     
	     <a href="https://www.linkedin.com/shareArticle?mini=true&url=<%= surl %>" target="_blank">
		        <img src="https://static.licdn.com/sc/h/eahiplrwoq61f4uan012ia17i" alt="LinkedIn" style="width:25px; height:25x;" />
	     
	     
		     
	<a href="http://www.facebook.com/sharer.php?u=<%= surl %>" target="_blank">
		         <img src="https://www.facebook.com/images/fb_icon_325x325.png" alt="Facebook" style="margin-left: -4px; width:25px; height:25px;" />
	</a>
	
			     <a href="https://twitter.com/home?status=<%= surl %> <<%= @event.name %>>" target="_blank">
		<img src="https://about.twitter.com/etc/designs/about-twitter/public/img/apple-touch-icon-72x72.png" alt="Twitter" style="margin-left:-4px; width:25px; height:25px;border-radius:1px;">
	</a>	


      </div>
	<script>
		$(function() {
			    $('button#shareBtn').click(function(event) {
				            event.preventDefault();
				           $('div#pp').toggle();
				        });
		});
	</script>

      </div> 
    <div class= "email-events">
      Or copy & paste this message in an email to your colleagues: <br><br>
      <i>Please join us live at <%= @event.start_at.strftime("%A %B %d, at %I:%M %p") %> PDT, <%= edt.strftime("%I:%M %p") %> EDT as we discuss <%= @event.name %> on CrowdPublish.TV's livestream.<br>
      To join the discussion, go to<br>
      http://www.CrowdPublish.TV/<%= @user.permalink %><br>
      and click on the Join Livestream button. </i>
    </div>
  </div>
<br><br>
    </div>

	</div> 
