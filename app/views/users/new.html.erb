<% @title="CrowdPublish.TV: The Future of Empowerment is Your Story" %>

<body >

<%= render 'form' %>

<div id="signup" style="position:absolute; left:100px; top:300px; ">

Sign up & sign in to hang out and learn with CrowdPublish.TV members.
</div>

<div id="signup" style="position:absolute; left:100px; top:330px; align:left">

<%= form_for(@user, :html => { :multipart => true }) do |f| %>

<table >
  <tr>
    <td align="left">Full Name:</td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td align="left"><%= f.label :email %>:</td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td align="left"> Password:</td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td align="left">Password Confirmation:</td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
</table>

<p>

    <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
 </div>
<% end %>
</body>