<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12">
			<h1>Discussion Hosts</h1>
		</div>
	</div>
	<div class="row">
		<% @merchusers.each do |u| %> 
				<% next if !u.youtube1.present? && !u.profilepic.present?%>
				<% genrelist = u.genre1, u.genre2, u.genre3 %>
				<% genrelist.reject!(&:empty?) %>
				<div class="col-md-4 col-sm-6 col-xs-12"> 
					<% if u.youtube1.present? %>
							<div class="embed-responsive embed-responsive-16by9">
								<iframe class="embed-responsive-item" src="//www.youtube.com/embed/<%= u.youtube1 %>" allowfullscreen></iframe>
							</div>
							<h4><%= link_to u.name, user_profile_path(u.permalink) %></h4>
							<p><%= genrelist.join(', ') %></p>
					<% elsif u.profilepic.present? %>
							<%= link_to(image_tag(u.profilepic.url.to_s, :height => "220",  :title => u.name), user_profile_path(u.permalink)) %>
							<h4><%= link_to u.name, user_profile_path(u.permalink) %></h4>
							<p><%= genrelist.join(', ') %></p>
					<% end %>
				</div>
		<% end %>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<%= will_paginate @merchusers, renderer: BootstrapPagination::Rails %> <br>
		</div>
</div>