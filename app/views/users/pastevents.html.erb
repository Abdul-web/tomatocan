<div class="panel panel-primary">
  <div class="panel-heading">Your Past Events</div>

<% if @pastevents.present? %>
  <table >  <tr>
    <th>Event </th>
    <th>When</th>
    <tr>
  <% @pastevents.sort_by{|t| t.start_at}.each do |event| %>
  <tr>
    <td><%= link_to event.name, event %><br><br></td>
    <td><%= event.start_at.strftime("%A %B %d, %Y at %I:%M %p")  %><br><br></td>
  <tr>
  <% end %>
  </table>
<% else %>  
  <%= @user.name %> hasn't posted any past events
<% end %>  
 
</div>
