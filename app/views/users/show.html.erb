<% @title="CrowdPublish.TV - interact with " + @user.name + " here live!" %>

<%= render 'userform' %>
<%= render 'authorsidebar' %>

<div id="uvid" style="position:absolute; overflow:hidden; left:400px; top:35px; z-index:3">
  <% if @user.ustreamvid? %>
    <% if @user.ustreamvid.match /<iframe src="http:\/\/www.ustream.tv\/embed/ %>
      <%= @user.ustreamvid.html_safe %>
    <% end %>
    <% elsif %>
      <iframe src="http://www.ustream.tv/embed/13434383" width="608" height="368" scrolling="no" frameborder="0" style="border: 0px none transparent;"></iframe><br /><a href="http://www.ustream.tv/producer?utm_campaign=Embed+Producer+Promotion&utm_source=Web&utm_medium=Embed&utm_term=Producer+Page&utm_utm_content=Free+desktop+streaming+application+by+Ustream" style="padding: 2px 0px 4px; width: 400px; background: #ffffff; display: block; color: #000000; font-weight: normal; font-size: 10px; text-decoration: underline; text-align: center;" target="_blank">Free desktop streaming application by Ustream</a>
  <% end %>
</div>

<div id="usocial" style="position:absolute; overflow:hidden; left:400px; top:370px; z-index:3">
  <% if @user.ustreamsocial? %>
    <% if @user.ustreamsocial.match /<iframe width="468" scrolling="no" height="586" frameborder="0" style="border: 0px none transparent;" src="http:\/\/www.ustream.tv\/socialstream/ %>
      <%= @user.ustreamsocial.html_safe %>
    <% end %>
  <% elsif %>
    <iframe width="468" scrolling="no" height="586" frameborder="0" style="border: 0px none transparent;" src="http://www.ustream.tv/socialstream/13434383"></iframe> 
   <% end %>
</div>

<div id="edit buttons" style="position:absolute; overflow:hidden; left:0px; top:170px; z-index:3">
<% if @user == current_user %>
  <table><tr><td>
  <%= button_to "Edit Profile", profileinfo_user_path(current_user), :method=> :get %> </td>
  <td><%= button_to "Edit Books", edit_user_path(current_user), :method=> :get %></td></tr></table> 
<% end %> 
</div>
