<% @title=" Watch " + @user.name + " videos here!" %>

<div class="blurb" >
  <% if @user.about %> 
    <%= simple_format @user.about.gsub(/\r\n/, '<br>') %>
  <% end %>
</div><br><br>

<% if @user.author == 2 %>

  <div class="row" >
    <div class="col-md-5 col-sm-4 col-xs-7 " >
    <% if @user.youtube1? %>
      <% if @user.youtube1.match /<iframe width="420" height="315" src="\/\/www.youtube.com\/embed/ %>
        <%= @user.youtube1.html_safe %>
      <% elsif @user.youtube1.match /<iframe width="420" height="315" src="https:\/\/www.youtube.com\/embed/ %>
        <%= @user.youtube1.html_safe %>
      <% elsif @user.youtube1.match /<iframe width="560" height="315" src="\/\/www.youtube.com\/embed/ %>
        <%= @user.youtube1.html_safe %>
      <% elsif @user.youtube1.match /<iframe width="560" height="315" src="https:\/\/www.youtube.com\/embed/ %>
        <%= @user.youtube1.html_safe %>
      <% end %>
    <% else %>
      <% if @user == current_user %>
        <br><br>Replace the default YouTube code on your Edit page with the code from your YouTube account and display YOUR videos here!
      <% end %>
      <iframe src="http://www.ustream.tv/embed/13434383?wmode=direct" style="border: 0 none transparent;" frameborder="no" width="408" height="330"></iframe>
    <% end %>
    <br>
    <% if @user.youtube2? %>
      <% if @user.youtube2.match /<iframe width="420" height="315" src="\/\/www.youtube.com\/embed/ %>
        <%= @user.youtube2.html_safe %>
      <% elsif @user.youtube2.match /<iframe width="420" height="315" src="https:\/\/www.youtube.com\/embed/ %>
        <%= @user.youtube2.html_safe %>
      <% elsif @user.youtube2.match /<iframe width="560" height="315" src="\/\/www.youtube.com\/embed/ %>
        <%= @user.youtube2.html_safe %>
      <% elsif @user.youtube2.match /<iframe width="560" height="315" src="https:\/\/www.youtube.com\/embed/ %>
        <%= @user.youtube2.html_safe %>
      <% end %>
    <% end %>
    <br>
    <% if @user.youtube3? %>
      <% if @user.youtube3.match /<iframe width="420" height="315" src="\/\/www.youtube.com\/embed/ %>
        <%= @user.youtube3.html_safe %>
      <% elsif @user.youtube3.match /<iframe width="420" height="315" src="https:\/\/www.youtube.com\/embed/ %>
        <%= @user.youtube3.html_safe %>
      <% elsif @user.youtube3.match /<iframe width="560" height="315" src="\/\/www.youtube.com\/embed/ %>
        <%= @user.youtube3.html_safe %>
      <% elsif @user.youtube3.match /<iframe width="560" height="315" src="https:\/\/www.youtube.com\/embed/ %>
        <%= @user.youtube3.html_safe %>
      <% end %>
    <% end %>

    <% if @user.ustreamsocial? %>
      <% if @user.ustreamsocial.match /<iframe src="http:\/\/www.ustream.tv\/socialstream/ %>
        <%= @user.ustreamsocial.html_safe %>
      <% elsif @user.ustreamsocial.match /<iframe src="https:\/\/www.ustream.tv\/socialstream/ %>
        <%= @user.ustreamsocial.html_safe %>
      <% end %>
    <% else %>

    </div>
    <div class="col-md-3 col-sm-4 col-xs-7 " >
      <iframe width="350" scrolling="no" height="586" frameborder="0" style="border: 0px none transparent;" src="http://www.ustream.tv/socialstream/13434383"></iframe>  
    <% end %>
  </div>

<% else  %>
  <div class="row" >
    <div class="col-md-7 col-md-offset-1 col-sm-7 col-xs-7 " >
      <% if @user.twitter %>
        <a class="twitter-timeline"    
        data-widget-id="375760459510464512"
        data-screen-name="<%= @user.twitter %>" data-show-replies="false"
        data-tweet-limit="5">Tweets by @<%= @user.twitter %> </a>
      <% end %>
    </div>
  </div>
<% end %>
