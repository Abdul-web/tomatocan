<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title> <% "Support " + @user.name + "'s Projects" %> </title>
<meta property="og:url" content="http://CrowdPublish.TV" />
<meta property="og:description" content="CrowdPublishTV helps actors, authors increase fan engagement & raise more funds" />
</head>

<% @title="Get Sneak Preview access to " + @user.name + " stories here!" %>


<% if user_signed_in? %>
<div class="row">
    <div class="container">
    <%= render 'users/dashboardbox' %>
    </div>
</div>

<% else %>

<%= render 'layouts/authorform' %>

<div class="row">
    <%= render 'layouts/merchsidebar' %>
    <%= render 'layouts/jitsi' %>
</div>

<div class="well">
    <div class="row">
        <% if @user.youtube1? %>
            <div class="col-sm-4">
                <% if @user.youtube1.match(/[0-9A-Za-z]/) && @user.youtube1.length < 20 %>
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="//www.youtube.com/embed/<%= @user.youtube1 %>" allowfullscreen></iframe>
                    </div>
                <% end %>
                <% if @user.videodesc1 %>
                    <div><%= simple_format @user.videodesc1.gsub(/\r\n/, '<br>') %></div>
                <% end %>
            </div>
        <% end %>
        <% if @user.youtube2? %>
            <div class="col-sm-4">
                <% if @user.youtube2.match(/[0-9A-Za-z]/) && @user.youtube2.length < 20 %>
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="//www.youtube.com/embed/<%= @user.youtube2 %>" allowfullscreen></iframe>
                </div>
                <% end %>
                <% if @user.videodesc2 %>
                <div><%= simple_format @user.videodesc2.gsub(/\r\n/, '<br>') %></div>
                <% end %>
            </div>
        <% end %>
        <% if @user.youtube3? %>
            <div class="col-sm-4">
                <% if @user.youtube3.match(/[0-9A-Za-z]/) && @user.youtube3.length < 20 %>
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="//www.youtube.com/embed/<%= @user.youtube3 %>" allowfullscreen></iframe>
                </div>
                <% end %>
                <% if @user.videodesc3 %>
                <div><%= simple_format @user.videodesc3.gsub(/\r\n/, '<br>') %></div>
                <% end %>
            </div>
        <% end %>
    </div>
</div>
<% end %>