<%= image_tag("futureEmpStory.png", :size => "712x25") %><p>
    <title>CrowdPublishTV members</title>

<div class="featured">  Featured Booklovers & Authors </div><br>

<div class="row" >
  <% @users.each do |u| %>
    <div class="col-md-3 col-sm-4 col-xs-6" >
      <div class="row" style="vertical-align:top; horizontal-align:center; height:230px; width:170px; overflow:hidden;" >
        <% if u.profilepic.present? && u.profilepic != '' %> 
          <%= link_to(image_tag(u.profilepic, :height => "170",  :title => u.name ), user_profile_path(u.permalink)) %> 
        <% elsif u.profilepicurl.present? %>
          <% if u.profilepicurl.match(/http/) && u.profilepicurl.match(/jpeg|jpg|gif|png|tif|GIF|TIF|PNG|JPEG|JPG/) %>
            <%= link_to(image_tag(u.profilepicurl, :height => "170", :title => u.name), user_profile_path(u.permalink)) %> 
          <% end %>
        <% end %>
        <br><%= link_to u.name, user_profile_path(u.permalink) %>
        <br><%= u.genre1 %>, <%= u.genre2 %>, <%= u.genre3 %>
      </div>
    </div>
  <% end %>
</div>
<br>  <%= will_paginate @users %> <br><br><br><br>
