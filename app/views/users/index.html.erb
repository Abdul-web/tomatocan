<% @title="CrowdPublish.TV Community " %>

<%= render 'form' %>

<div id="userlist" style="position:absolute; overflow:hidden; left:255px; top:250px; z-index:3">
<%= button_to "Sign up ", new_user_path, :method=> :get %></div>

<div id="userlist" style="position:absolute; overflow:hidden; left:100px; top:290px; z-index:3">
<span class="Body-C5">CrowdPublish.TV Featured People</span>
<table CELLPADDING="0" CELLSPACING="10" WIDTH="800" >
  <tr>
    <th></th>
    <th align="left">&nbsp&nbsp&nbsp&nbspName</th>
    <th align="left">&nbsp&nbsp&nbsp&nbspWriting Genres</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td color="#443c55" align="left">
      <%= link_to user.name, user %></td>
    <td align="left"><%= user.email  %>, <%= user.blogurl %>, <%= user.genre1 %>, <%= user.genre2 %>, <%= user.genre3 %></td>
  </tr>

<% end %>
</table>
</div>
