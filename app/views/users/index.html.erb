<% @title="CrowdPublish.TV Community " %>

<%= render 'form' %>

<div id="userlist" style="position:absolute; overflow:hidden; left:255px; top:250px; z-index:3">
<%= button_to "Sign up ", new_user_path, :method=> :get %></div>

<div id="userlist" style="position:absolute; overflow:hidden; left:100px; top:290px; z-index:3">

<div id="user_nav">
  <% if user_signed_in? %>
    Signed in as <%= current_user.email %>. Not you?
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
  <% end %>
</div>

<span class="Body-C5">CrowdPublish.TV Featured People</span>
<table CELLPADDING="0" CELLSPACING="10" WIDTH="800" >
  <tr>
    <th></th>
    <th align="left">&nbsp&nbsp&nbsp&nbspName</th>
    <th align="left">&nbsp&nbsp&nbsp&nbspWriting Genres</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td> 
<% if user.profilepicurl != nil %>
   <% if user.profilepicurl.match /http/ %>
      <%= link_to(image_tag(user.profilepicurl, :size => "50x50", :profilepicurl => user.name), user)  %>
   <% else %>
   <%= link_to(image_tag("http://gurutapas.com/images/whiteBk.jpg", :size => "50x50"), user)  %>   
   <% end %>
<% else %>
      <%= link_to(image_tag("http://gurutapas.com/images/whiteBk.jpg", :size => "50x50", :profilepicurl => user.name), user)  %> 
<% end %>

</td>
    <td color="#443c55" align="left">
      <%= link_to user.name, user %></td>
    <td align="left"> <%= user.genre1 %>, <%= user.genre2 %>, <%= user.genre3 %></td>
  </tr>

<% end %>
</table>
</div>

