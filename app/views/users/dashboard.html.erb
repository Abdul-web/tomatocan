<% @title=" need to paginate results "  %>
<p class="flash"><%= flash.notice %></p>

<% if @user == current_user %>
  <div class="col-md-10 " style="text-align:left">
    <div class="blacktxt" >

      <div style='font-size:130%;'><b>Your sales<br></b></div>
      <div style='font-size:110%;'><b>Monthly sales of each item<br></b></div>
      <table>
        <tr style='font-weight:bold;'><td><b>Month</td><td>Title</td><td>Quantity Sold</td><td>Total Earned (USD)</b></td></tr>
        <% @monthinfo.sort_by{|sale| sale[:soldwhen]}.each do |book| %>
          <tr><td><i><%= book[:month] %> </i> </td><td> <%= book[:monthtitle] %> </td><td> <%= book[:monthquant] %> </td><td> <%= number_with_precision(book[:monthearnings], :precision => 2) %></td></tr>
        <% end %>
      </table><br>

      <div style='font-size:110%;'><b>Income each month<br></b></div>
      <br><br>
      
      <div style='font-size:110%;'><b>Number of each book sold</b></div>
      <table>
        <tr style='font-weight:bold;'><td><b>Title</td><td>Format</td><td>Quantity Sold</b></td></tr>
        <% @titleinfo.sort_by{|sale| sale[:soldwhen]}.each do |book| %>
          <tr><td><i><%= book[:soldtitle] %> </i> </td><td> <%= @soldinfo[:bookfiletype] %> </td><td> <%= book[:soldprice] %> </td></tr>
        <% end %>
      </table>      x pdf, y mobi, z kobo<br>
      Other merch will have different attributes<br><br>
     

      <div style='font-size:110%;'><b>List of each sale<br></b></div>
      <table>
        <tr style='font-weight:bold;'><td>Title</td><td>Price Sold</td><td>Sales Date</td><td>Customer Name</td></tr>
        <% @totalinfo.sort_by{|sale| sale[:soldwhen]}.each do |book| %>
          <tr><td><i><%= book[:soldtitle] %> </i> </td><td> <%= book[:soldprice] %> </td><td> <%= book[:soldwhen] %></td><td> <%= book[:whobought] %></td></tr>
        <% end %>
      </table>Hide this list in js dropdown<br><br><br>
    
      <div style='font-size:130%;'><b>Books you've purchased<br></b></div>
      <table>
        <tr style='font-weight:bold;'><td><b>Title</td><td>Author</td><td>Price Paid</td><td>Purchase Date</b></td></tr>
        <% @purchasesinfo.sort_by{ |purch| purch[:purchasedwhen] }.each do |book| %>
          <tr><td><i><%= book[:purchasetitle] %> </i> </td><td> <%= book[:purchaseauthor] %> </td><td> <%= book[:purchaseprice] %> </td><td> <%= book[:purchasedwhen] %></td></tr>
        <% end %>
      </table>
    </div>
  </div>
<% end %>

