<% @invite = Invite.new %>

<% if @errors.present? %>
  <div class="errors">
    <ul>
      <% @errors.each do |error| %>

         <li> <%= error %> </li>

      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@invite) do |form| %>

  <div class="form-group">
    <%= form.label :firstname %>
    <%= form.text_field :firstname %>
  </div>

  <div class="form-group">
    <%= form.label :lastname %>
    <%= form.text_field :lastname %>
  </div>

  <div class="form-group">
    <%= form.label :description%>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>