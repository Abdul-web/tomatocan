<div class="row" >
  <div class="col-md-6 col-sm-10 col-xs-12">
    <div class="socialize" > 
      <b><%= @book.title %></b> by <%= @user.name %>
    </div>
  </div>
  <div class="col-md-6 col-sm-2 col-xs-12">
    <%= @book.genre %>  
  </div>
</div>

<div class="row"  style="margin-top:10px;">
  <div class="col-md-3 col-sm-4 col-xs-6" style="width:200px;height:260px;background-color:#dddddd; vertical-align:middle; margin-right:10px; ">
        <% if @book.coverpic.present? && @book.coverpic != '' %>
          <%= image_tag(@book.coverpic, :size => "200x260") %>
        <% elsif @book.coverpicurl.present? && @book.coverpicurl.match(/http/) && @book.coverpicurl.match(/jpeg|jpg|gif|png|tif|GIF|TIF|PNG|JPEG|JPG/) %> 
            <%= image_tag(@book.coverpicurl, :size => "200x260") %>
        <% elsif @book.title.match /[0-9A-Za-z]/ %> 
          <div class="covertitle">
            <br><%= @book.title %> <br> <br>  
          </div>
          <div class="covername" >
            <%= @user.name %> 
          </div>
        <% end %>
      <br><br>$<%= sprintf('%.2f', @book.price) %> USD <br><br>

      <% # if @book.bookpdf.present? && @book.bookpdf != '' %>
        <%= link_to image_tag("buypdf.png" ), new_purchase_path(:book_id => @book.id, :bookfiletype => "pdf"), :method=> :get %>
      <% # end # put some buttons here %>
      <% # if @book.bookmobi.present? && @book.bookmobi != '' %>
        <%= link_to image_tag("buymobi.png" ), new_purchase_path(:book_id => @book.id, :bookfiletype => "mobi"), :method=> :get %>
      <% # end %>
      <% # if @book.bookepub.present? && @book.bookepub != '' %>
        <%= link_to image_tag("buyepub.png" ), new_purchase_path(:book_id => @book.id, :bookfiletype => "epub"), :method=> :get %>
      <% # end %>
  </div>

  <div class="col-md-6 col-sm-4 col-xs-6">
    <div class="blurb">   <%= simple_format @book.blurb.gsub(/\r\n/, '<br>') %>
    </div>
  </div>


  <div class="col-md-3 col-sm-4 col-xs-12 ">
    <% if @book.youtube1? %> 
      <% if @book.youtube1.match /<iframe width="420" height="315" src="\/\/www.youtube.com\/embed/ %>
        <%= @book.youtube1.html_safe %> <br><br>
      <% end %>
    <% end %>
    <% if @book.youtube2? %> 
      <% if @book.youtube2.match /<iframe width="420" height="315" src="\/\/www.youtube.com\/embed/ %> 
        <%= @book.youtube2.html_safe %>
      <% end %>
    <% end %>
  </div>
</div>
