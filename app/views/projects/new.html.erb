<div class="row" >
  <div class="col-md-7 col-sm-offset-2 col-sm-8 col-sm-offset-1 col-xs-12 " style= "text-align:left" >

<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <b>Project Name </b><br>
    <%= f.text_field :name, :size => 80, placeholder: "The Best Project Ever" %>
  </div>
  <div class="field">
    <b>URL ending</b> - numbers and letters ONLY. <br />
    www.CrowdPublish.TV/projects/<%= f.text_field :permalink, :size => 50, placeholder:  "YourprojectURLEnding" %>  <p>
  </div>
  <div class="field">
    <b>About project </b><br>
      What is your mission statement? What will you accomplish? (You may add to this later)<br>
    <%= f.text_area :mission, :cols => 82, :rows => 7 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>
</div>
