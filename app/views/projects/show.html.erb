<p id="notice"><%= notice %></p>

<div class="blacktxt">
  <h3><%= @project.name %> </h3>
  <%= @author.name %><br><br>
  <strong>Mission:</strong>  <%= @project.mission %><br><br>

  <% if @merchandise %>
    <% if !user_signed_in? %>
      <%= link_to image_tag("bubbleButton165.png", :size => "155x40"), "/signup" %>
      or <%= link_to 'Sign in', "/login" %> to get Patron Perks<br><br>
    <% end %>
    <strong>Patron Perks:</strong>
    <table>
      <% @merchandise.each do |merch| %>
        <tr><td style='font-weight:bold;'><%= link_to(merch.name, merchandise_path(merch.id, :groupid => params[:groupid]) ) %></td> <td>$<%= sprintf('%.2f', merch.price) %> USD</td> <td>
        <% if user_signed_in? %>
          <%= link_to image_tag("buynow.png" ), new_purchase_path( :merchandise_id => merch.id, :group_id => params[:groupid]), method: :get %> </td></tr>
        <% end %>
        <tr><td><%= truncate(merch.desc , :length => 200, :separator => ' ') %><br><br></td></tr>
      <% end %>
    <table>
  <% end %>

  <% if user_signed_in? %>
    <% if @project.user_id == current_user.id %>
      <%= button_to(name = "Edit Project", edit_project_path(@project.id), :method => :get) %>
    <% end %>
  <% end %>

</div><br><br><br>