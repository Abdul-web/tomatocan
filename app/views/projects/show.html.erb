<p id="notice"><%= notice %></p>

  <% if @project.projectpic.present? && @project.projectpic != '' %>
    <%= image_tag(@project.projectpic, size: '500x200') %>
  <% end %>
  <h3><%= @project.name %>   
    <% if user_signed_in? %>
      <% if @project.user_id == current_user.id %>
        <%= button_to(name = "Edit Project", edit_project_path(@project.id), method: :get, form_class: 'btn btn-small') %>
      <% end %>
    <% end %>
  </h3>

  <%= @author.name %><br><br>

<div class="blacktxt">
  <%= @project.mission %><br><br>

  <% if @merchandise.present? %>
    <% if !user_signed_in? %>
      <%= link_to image_tag("bubbleButton165.png", :size => "155x40"), "/signup" %>
      or <%= link_to 'Sign in', "/login" %> to get Patron Perks<br><br>
    <% end %>
  
    <h3>Patron Perks </h3>
    <% @merchandise.each do |merch| %>
      <div class="col-md-4 col-sm-6 col-xs-12" > 
          <% if merch.itempic.present? && merch.itempic != '' %>
            <% itemthumb = merch.itempic %>
          <% else %>
            <% itemthumb = "whiteBk.jpg" %>
          <% end %>

          <%= link_to (image_tag itemthumb, :style => "opacity:0.5; filter:alpha(opacity=30); max-height:150px"), merchandise_path(merch.id) 
          %>

          <table><tr><td><%= link_to(merch.name, merchandise_path(merch.id, :groupid => params[:groupid]) ) %></td> <td>$<%= sprintf('%.2f', merch.price) %> USD</td> <td>
          <% if user_signed_in? %>
            <%= link_to image_tag("buynow.png" ), new_purchase_path( :merchandise_id => merch.id, :group_id => params[:groupid]), method: :get %> </td></tr></table>
          <% end %>
          <%= truncate(merch.desc , :length => 200, :separator => ' ') %><br><br>
      </div>
    <% end %> 
  <% end %>

<br><br><br>
</div>