<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta name="CrowdPublish.TV" content="like eBay for authors - with video!">
  <title>CrowdPublishTV - The Future of Empowerment is Your Story</title>
</head>


<div class="row" > 

  <a href="<% groups_path %>"> 
<div class="supportgroupimage col-md-4 col-sm-6 col-xs-12 "> 
    <div class="username" style="text-shadow: 1px 1px #000; width:350px; height:200px;"><br>
      <%= link_to "Organizations that support our authors & filmmakers", groups_path, title: "Find the page for the Organization that referred you to CrowdPublish.TV" %>
      <%= link_to image_tag("transparent.png", size: "350x130", title: "Find the page for the Organization that referred you to CrowdPublish.TV"), groups_path %> 
    </div>
</div>
  </a>

<div class="col-md-4 col-sm-6 col-xs-12" > 
<div class="relative">
<div id="myCarousel" class="carousel" data-ride="carousel"  style="width: 400px; height: 200px; margin: 0 auto">
  <!-- Wrapper for slides -->
  <div class="carousel-inner" style="width:400px; height:200px;">
    <div class="item active">
      <%= link_to image_tag("cpLogo150.png"), projects_path %> 
      <div class="carousel-caption username">
        <%= link_to "Support a Project", projects_path %>
      </div>    
    </div>
    <% @projwithpic.find_each do |pic| %>
      <div class="item" >
        <%= link_to image_tag(pic.projectpic, :size => "400x200"), projects_path %> 
        <div class="carousel-caption username">
          <%= link_to "Find a Project To Support", projects_path %>
        </div>    
      </div>
    <% end %> 
  </div>
  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
</div>

  <div class="hsmovieimage col-md-4 col-sm-6 col-xs-12" > 
    <div class="username" style="text-shadow: 1px 1px #000; width:350px; height:200px;" >
      <%= link_to "Featured Project: ", "/projects/lisas80scatholichighschoolmovie", title: "Lisas 80s Catholic High School Movie " %><br>
      <%= link_to "Lisa's 80's Catholic High School Movie", "/projects/lisas80scatholichighschoolmovie", title: "Lisas 80s Catholic High School Movie" %>
      <%= link_to image_tag("transparent.png", size: "350x130", title: "Lisas 80s Catholic High School Movie"), "/projects/lisas80scatholichighschoolmovie" %> 
    </div>
  </div>

</div>

<br><br><br><br>
<div class="row" > 
  <div class="helps" >
    Authors to Watch
  </div><br>
  <% @authors.each do |u| %> 
      <div class="col-md-4 col-sm-6 col-xs-12" > 
        <div class="r" style="vertical-align:top; horizontal-align:center; height:290px; width:395px; overflow:hidden;" >
          <iframe width="370" height="220" src="//www.youtube.com/embed/<%= u.youtube1 %>" frameborder="0" allowfullscreen></iframe>
          <br><%= link_to u.name, user_profile_path(u.permalink) %>
          <br><%= u.genre1 %>, <%= u.genre2 %>, <%= u.genre3 %>
        </div>
      </div>
  <% end %>
  <div class="indexlist" >
    <b>Browse more videos by CrowdPublish.TV authors</b><br> <%= will_paginate @authors %> <br>
  </div>
<%= image_tag("futureEmpStory.png", :size => "712x25") %><p>
