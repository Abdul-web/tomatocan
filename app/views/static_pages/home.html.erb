<div class="container-flex">
  <div class="row" style = "position: absolute; z-index: 1; top:50px;" >
    <div class="col-md-5 col-sm-5 col-xs-9" style="padding-top:20px">
      <div class="whitetxt", style="position:relative; z-index: 9999; font-size:40px; text-shadow: 1px 1px #000; height: 80px">
        <b>Actors & Authors </b>
      </div>
      <div class="lavenderlink" style="text-shadow: 1px 1px #000;">
      <% if user_signed_in? %>
          <br><%= link_to "Increase fan engagement &", new_phase_path %><br>
          <%= link_to "Raise more funds", new_phase_path, :class => "btn btn-primary", style: "font-size:24px; margin-top:10px; background:#6e73d1; color:#fff" %>
        <% else %>
          <br><%= link_to "Increase fan engagement &", new_user_signup_path(usertype: "creator") %><br>
          <%= link_to "Raise more funds", new_user_signup_path(usertype: "creator"), :class => "btn btn-primary", style: "font-size:24px; margin-top:10px; background:#6e73d1; color:#fff;" %>
        <% end %>
      </div>
    </div>

    <div class="col-md-2 col-sm-2 col-xs-3">
      <br><%= image_tag("cpLogo100.png") %>
          <% if !user_signed_in? %>
            <%= link_to "SIGN UP", new_user_signup_path(usertype: "creator"), :class => "btn btn-primary", style: "font-size:20px; margin-top:10px; background:#6e73d1; color:#fff;" %>
            <div class="usermenu" style= "text-shadow: 1px 1px #000;">
              <%= link_to 'Sign in', "/login", {:style=>'color:#FFFFFF;'}  %>
            </div> 
