    </div>
      </div> 
    </div>
    </div>
  </div>
 <script>
   $(document).ready(function(){
        $('.arrow').click(function(){
     $('.location-content').toggleClass('active');
         $('.location-icon').toggleClass('active');
     $('#angle').toggleClass('rotate');
    });
        
   });

      $(document).ready(function(){
        $('.arrow1').click(function(){
     $('.location-content1').toggleClass('active');
         $('.location-icon1').toggleClass('active');
     $('#angle1').toggleClass('rotate1');
    });
        
   });

     $(document).ready(function(){
